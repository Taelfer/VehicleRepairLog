@if (Show is true)
{
        <div class="modal fade show d-block" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Confirmation Form</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="OnCancel">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @if (NextVehicleConfirmation is true)
                        {
                            <p>Are you sure you want to save Vehicle and add next?</p>
                        }
                        else if (NextRepairConfirmation is true)
                        {
                            <p>Are you sure you want to save Repair and add next?</p>
                        }
                        else if (NextPartConfirmation is true)
                        {
                            <p>Are you sure you want to save Part and add next?</p>
                        }
                        else if (AddPartsConfirmation is true)
                        {
                            <p>Are you sure you want to save Repair and add Parts?</p>
                        }
                    </div>
                    <div class="modal-footer">
                        @if (NextVehicleConfirmation is true)
                        {
                            <button type="button" class="btn btn-success" @onclick="OnNextVehicle">Confirm</button>
                        }
                        else if (NextRepairConfirmation is true)
                        {
                            <button type="button" class="btn btn-success" @onclick="OnNextRepair">Confirm</button>
                        }
                        else if (NextPartConfirmation is true)
                        {
                            <button type="button" class="btn btn-success" @onclick="OnNextPart">Confirm</button>
                        }
                        else if (AddPartsConfirmation is true)
                        {
                            <button type="button" class="btn btn-success" @onclick="OnAddPart">Confirm</button>
                        }
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="OnCancel">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
}

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public bool NextVehicleConfirmation { get; set; }
    [Parameter] public bool NextRepairConfirmation { get; set; }
    [Parameter] public bool NextPartConfirmation { get; set; }
    [Parameter] public bool AddPartsConfirmation { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnNextVehicle { get; set; }
    [Parameter] public EventCallback OnNextRepair { get; set; }
    [Parameter] public EventCallback OnNextPart { get; set; }
    [Parameter] public EventCallback OnAddPart { get; set; }
}
