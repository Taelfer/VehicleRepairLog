@page "/addVehicle"

@inject IVehicleService vehicleService
@inject NavigationManager navigationManager

<h3>Add Vehicle</h3>

<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="BrandName" class="control-label">Brand Name</label>
                <input form="BrandName" class="form-control" @bind-value="@vehicle.BrandName"/>

                <label for="VinNumber" class="control-label">Vin Number</label>
                <input form="VinNumber" class="form-control" @bind-value="@vehicle.VinNumber"/>

                <label for="UserId" class="control-label">user id</label>
                <input form="UserId" class="form-control" @bind-value="@vehicle.UserId"/>

                <input type="hidden" @bind-value="@vehicle.Id" />
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-primary" @onclick="() => CreateVehicle()">Save</button>
                <button type="button" class="btn btn-danger" @onclick="() => cancel()">Cancel</button>
            </div>
        </form>
    </div>
</div>

@code {
    Vehicle vehicle = new();

    protected async Task CreateVehicle()
    {
        await vehicleService.AddVehicleAsync(vehicle);
        navigationManager.NavigateTo("/vehicles");
    }

    void cancel()
    {
        navigationManager.NavigateTo("/vehicles");
    }
}
